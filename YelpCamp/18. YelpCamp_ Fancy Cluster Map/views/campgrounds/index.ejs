<% layout('layouts/boilerplate') %> <!-- automatic views folder theke search start korbe -->
    <div id="map" class="mb-3" style="width: 100%; height: 480px;"></div>
    <div class="container" style="width: 85%;">
        <h1 class="text-center mb-5">All Campgrounds</h1>
        <% for(let campground of campgrounds){%>
            <div class="card my-3">
                <div class="row">
                    <div class="col-4">
                        <% if(campground.image.length){%>
                            <img src="<%= campground.image[0].url %> " class="img-fluid" alt="">
                            <% } %>
                    </div>
                    <div class="col-8 ">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= campground.title %>
                            </h5>
                            <p class="card-text">
                                <%= campground.description %>
                            </p>
                            <h5 class="card-text text-muted">
                                <%= campground.location %>
                            </h5>
                            <a href="/campgrounds/<%= campground.id %> " class="btn btn-primary">View <%=
                                    campground.title %>
                            </a>
                        </div>
                    </div>

                </div>
            </div>

            <% } %>
    </div>


    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        const campInfo = {features : <%-JSON.stringify(campgrounds)%>}
    </script>
    <!-- publicly server page -->
    <script src="/javascript/clusterMap.js"></script>